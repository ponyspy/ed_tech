@font-face {
	font-family: 'ABCFavoritPro-Light';
	src: url('../fonts/ABCFavoritPro-Light-Trial.woff2');
}

@media screen and (max-width: 1280px) {
	@import '_mob_1280.styl'
}

@media screen and (max-width: 1100px) {
	body {
		font-size 12pt!important
		line-height 14pt!important
	}
	body p {
		font-size 16pt!important
		line-height 16pt!important
	}
}

@media screen and (max-width: 800px) {
	@import '_mob_800.styl'
}

@keyframes marquee {
	0% { left: 0; }
	100% { left: -100%; }
}

body
html
	margin 0
	padding 0
	height 100%
	color rgb(238, 56, 49)
	font-family 'ABCFavoritPro-Light'
	font-size 14pt
	line-height 16pt
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	a
		color rgb(238, 56, 49)
	p
		margin 0
		padding 0
		font-size 22pt
		line-height 22pt
		text-indent 90px

.section_item
	-ms-overflow-style none
	scrollbar-width none
	&::-webkit-scrollbar
		display none

.simplebar-track.simplebar-vertical
	right 8px

.simplebar-scrollbar
	&:before
		background-color: rgb(238, 56, 49)
	&.simplebar-visible:before
		opacity 1!important


.outer_block
	display flex
	flex-direction column
	height 100%
	.header_block
		position relative
		display flex
		flex-direction row
		border-bottom 1px solid rgb(238, 56, 49)
		overflow hidden
		padding 20px
		min-height 17px
		.header_inner
			white-space nowrap
			display flex
			min-width 200%
			height 30px
			position absolute
			overflow hidden
			animation marquee 15s linear infinite
			.header_marquee
				display flex
				width 50%
				span:after
					margin-right 140px
					margin-left 140px
					content ''
					display inline-block
					width 12px
					height 12px
					border-radius 100%
					background-color rgb(238, 56, 49)
	.content_block
		display flex
		flex-direction row
		flex-grow 1
		min-height 0
		.main_block
			width 33.3333333333333333333%
			box-sizing border-box
			display flex
			flex-direction column
			border-right 1px solid rgb(238, 56, 49)
			.main_title
				margin-bottom auto
				padding 20px
				img
					display block
					width 100%
			.main_desc
				padding 20px
			.main_footer
				padding 20px
				border-top 1px solid rgb(238, 56, 49)

		.sections_block
			width 50%
			flex-grow 1
			min-height 0
			display flex
			flex-direction column
			justify-content flex-end
			.section_item
				width 100%
				border-top 1px solid rgb(238, 56, 49)
				display flex
				flex-direction row
				&:first-child
					border-top none
				.column
					width 50%
					flex-grow 1
					display flex
					flex-direction column
					min-height 0
					border-right 1px solid rgb(238, 56, 49)
					overflow hidden
					&:last-child
						border-right none
					&.none
						cursor pointer
						position relative
						svg
							width 100%
							height 100%
							position absolute
							line
								stroke rgb(238, 56, 49)
								stroke-width 0.7
					.column_title
						padding 20px
						box-sizing border-box
						display flex
						align-items center
						justify-content space-between
						cursor pointer
						span, a
							margin-right auto
							&.clear
								display none
								margin-right auto
							&.dl
								display none
								margin-right 60px
								margin-left 105px
							&.num
								min-width 30px
								margin-right 60px
						&:after
							content ''
							display inline-block
							width 12px
							height 12px
							border-radius 100%
							background-color rgb(238, 56, 49)
					.column_body
						padding 20px
						box-sizing border-box
						display none
						.logo
							display block
							margin-left -20px
							margin-right -20px
							background-color rgb(238, 56, 49)
							padding 15px
							img
								display block
								margin 0 auto
								max-width 300px
								width 100%
						&.photos
							position relative
							padding 0
							.slider_title
								display flex
								align-items center
								padding-left 20px
								padding-right 20px
								margin-top 60px
								margin-bottom 20px
								span
									padding-left 68px
								img
									height 20px
							.slider_block
								position relative
								overflow hidden
								white-space nowrap
								font-size 0
								width 100%
								cursor pointer
								&.open .slide_item
									cursor ew-resize
									width 80%!important
								&:last-child
									margin-bottom 60px
								.slider_inner
									.slide_item
										vertical-align top
										display inline-block
										margin-left 20px
										margin-right 20px
										box-sizing border-box
										width 25%
										img
											width 100%
											display inline-block
										.slide_desc
											white-space normal
											font-size 14pt!important
											color rgb(238, 56, 49)
						&.draw
							padding 0
							overflow hidden
							canvas
								cursor: url('../img/icons/cursor.svg') 15 25, auto;
				&.active
					margin-bottom auto
					flex-grow 1
					min-height 0
					overflow scroll
					.column
						cursor auto
					.column_title
						cursor auto
						a.dl
						a.clear
							display inline
					.column_body
						display block
						flex-grow 1
						// overflow auto
						min-height 0

